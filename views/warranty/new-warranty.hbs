{{#if errorMessage}}
<p class='error'>{{errorMessage}}</p>
{{/if}}

<h2>New warranty</h2>

<form action="/warranty/{{oneItem._id}}/create-warranty" method="post">

  <h2 class="add-warranty">ADD WARRANTY TO: <span>{{oneItem.name}}</span></h2>


  <div>
    <label for="warrantyType">Warranty type</label>
    <select name='warrantyType' id='warrantyType'>
      <option value='builder'>builder</option>
      <option value='seller'>seller</option>
      <option value='payment'>payment</option>
      <option value='insurance'>insurance</option>
    </select>
  </div>

  <label for="durationInMonths">Warranty duration in months</label>
  <input type="number" name="durationInMonths" id="durationInMonths"></input>

  <label for="provider">provider</label>
  <input type="text" id="provider" name="provider">

  <label for="policyImg">warranty extra document</label>
  <input type="text" id="policyImg" name="policyImg">

  <button id="create-warranty">Save new warranty</button>
</form>

<div class="existing-warranties">
  <p>EXISTING WARRANTIES</p>
  {{#each warranty}}
  {{provider}}
  {{/each}}
</div>

<a href='/items/{{oneItem._id}}' class="close-link">Close</a>